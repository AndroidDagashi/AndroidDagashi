{
  "extends": ["config:recommended"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": ["*"]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": ["@typescript-eslint{/,}**", "eslint{/,}**"]
    }
  ]
}
